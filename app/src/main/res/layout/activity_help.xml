<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo general -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fondo_menu"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header con botón Salir (métricas iguales a AddDrug) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_exit"
            android:contentDescription="@string/help_back_cd"
            android:alpha="1"
            android:scaleType="fitCenter"
            android:padding="30dp"
            android:background="@drawable/ripple_round_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Título centrado (primer elemento de la cadena vertical “packed”) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="48sp"
        android:fontFamily="@font/fuentemedscan"
        android:shadowColor="#88407BFF"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/option1Row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.48"/>

    <!-- FILA 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option1Row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/help_opt1_cd"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/option2Row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/option1Circle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:elevation="4dp"
            android:foreground="@drawable/ripple_round_button2"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Imagen de fondo recortada a círculo -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fondo_menu"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                tools:targetApi="lollipop" />

            <!-- Borde circular -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_stroke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/help_opt1_num"
                android:textStyle="bold"
                android:textSize="44sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="@font/fuentemedscan" />
        </FrameLayout>

        <TextView
            android:id="@+id/option1Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/help_opt1_text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fuentemedscan"
            app:layout_constraintStart_toEndOf="@id/option1Circle"
            app:layout_constraintTop_toTopOf="@id/option1Circle"
            app:layout_constraintBottom_toBottomOf="@id/option1Circle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FILA 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option2Row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/help_opt2_cd"
        app:layout_constraintTop_toBottomOf="@id/option1Row"
        app:layout_constraintBottom_toTopOf="@id/option3Row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/option2Circle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:elevation="4dp"
            android:foreground="@drawable/ripple_round_button2"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fondo_menu"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                tools:targetApi="lollipop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_stroke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/help_opt2_num"
                android:textStyle="bold"
                android:textSize="44sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="@font/fuentemedscan" />
        </FrameLayout>

        <TextView
            android:id="@+id/option2Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/help_opt2_text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fuentemedscan"
            app:layout_constraintStart_toEndOf="@id/option2Circle"
            app:layout_constraintTop_toTopOf="@id/option2Circle"
            app:layout_constraintBottom_toBottomOf="@id/option2Circle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FILA 3 (último de la cadena) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option3Row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/help_opt3_cd"
        app:layout_constraintTop_toBottomOf="@id/option2Row"
        app:layout_constraintBottom_toTopOf="@id/statusText"
        app:layout_goneMarginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/option3Circle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:elevation="4dp"
            android:foreground="@drawable/ripple_round_button2"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fondo_menu"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                tools:targetApi="lollipop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_stroke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/help_opt3_num"
                android:textStyle="bold"
                android:textSize="44sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="@font/fuentemedscan" />
        </FrameLayout>

        <TextView
            android:id="@+id/option3Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/help_opt3_text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fuentemedscan"
            app:layout_constraintStart_toEndOf="@id/option3Circle"
            app:layout_constraintTop_toTopOf="@id/option3Circle"
            app:layout_constraintBottom_toBottomOf="@id/option3Circle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Feedback de estado (reserva espacio abajo para que el bloque quede centrado sin pegarse al borde) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#E0FFFFFF"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
