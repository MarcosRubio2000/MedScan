<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Vista de cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Vista previa de la cámara para escanear medicamentos" />

    <!-- BARRA SUPERIOR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón de linterna -->
        <ImageButton
            android:id="@+id/flashButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_lantern_off"
            android:contentDescription="Activar o desactivar linterna"
            android:alpha="0.8"
            android:scaleType="fitCenter"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ripple_round_button" />

        <!-- Botón de ayuda -->
        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Abrir menú de ayuda"
            android:alpha="0.8"
            android:scaleType="fitCenter"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/flashButton"
            app:layout_constraintEnd_toStartOf="@id/addDrugButton"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ripple_round_button" />

        <!-- Botón para añadir medicamentos -->
        <ImageButton
            android:id="@+id/addDrugButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_add_drug"
            android:contentDescription="Añadir un nuevo medicamento a la base de datos"
            android:alpha="0.8"
            android:scaleType="fitCenter"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_round_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Texto central -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#10DDDDDD"
        android:layout_marginBottom="75dp"
        android:padding="10dp"
        android:text="@string/texto_modo_deteccion"
        android:textSize="20sp"
        android:textColor="#80FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:contentDescription="Instrucción: Coloque la caja del medicamento frente a la cámara y presione DETECTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <!-- BOTÓN DETECTAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/fondo_redondeado">

        <Button
            android:id="@+id/detection_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/detection"
            android:textStyle="bold"
            android:textSize="60sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/button_3d"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:tint="@null"
            android:elevation="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:contentDescription="Botón para iniciar detección de medicamento" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
